-- Basit Kontrol Paneli
local ScreenGui = Instance.new("ScreenGui")
local MainButton = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")

-- Panel Ayarları
ScreenGui.Name = "CustomAimControl"
ScreenGui.Parent = game:GetService("CoreGui") -- Delta kapansa da gitmemesi için

MainButton.Name = "ToggleButton"
MainButton.Parent = ScreenGui
MainButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MainButton.Position = UDim2.new(0.05, 0, 0.4, 0) -- Ekranın sol ortası
MainButton.Size = UDim2.new(0, 120, 0, 45)
MainButton.Text = "AIM ÇALIŞTIR"
MainButton.TextColor3 = Color3.fromRGB(255, 255, 255)
MainButton.Font = Enum.Font.SourceSansBold
MainButton.TextSize = 18

UICorner.Parent = MainButton

-- Tıklama Fonksiyonu
MainButton.MouseButton1Click:Connect(function()
    MainButton.Text = "YÜKLENİYOR..."
    MainButton.BackgroundColor3 = Color3.fromRGB(200, 150, 0)
    
    -- Senin verdiğin o GUI'siz kodu burada çalıştırıyoruz
    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/ygtk2010zx-bit/Main./refs/heads/main/Aim"))()
    end)
    
    if success then
        MainButton.Text = "AKTİF!"
        MainButton.BackgroundColor3 = Color3.fromRGB(0, 180, 0)
        wait(2)
        MainButton.Text = "TEKRAR BAS" -- Bazı scriptler hata verirse diye
    else
        MainButton.Text = "HATA!"
        MainButton.BackgroundColor3 = Color3.fromRGB(180, 0, 0)
        warn("Hata oluştu: " .. err)
        wait(2)
        MainButton.Text = "AIM ÇALIŞTIR"
    end
end)

print("Kontrol Butonu Eklendi!")
